@{
    ViewBag.Title = "Home";
}

<h1>Dashboard</h1>

<div class ="fundo">
    <div>

        <div class="row col-md-12">
            @{
                for (int i = 1; i < 13; i++)
                {
                    var data = Convert.ToDateTime($"01/{i}/{DateTime.Now.Year}");
                    if (i == 7)
                    {
                        <div class="col-md-12">
                        </div>
                    }

                    var id_recurso = i.ToString() + "R";
                    var id_requisito = i.ToString();

                    <div class="col-md-2">
                        <p class="text-center" style="margin-top: 5px;">@data.ToString("MMMM")</p>
                        <input type="text" id="@id_recurso" class="form-group-sm form-control" style="margin-right:5px;" placeholder="Recurso" />
                        <input type="text" id="@id_requisito" class="form-group-sm form-control" style="margin-right: 5px; margin-top: 5px;" placeholder="Requisito" />

                    </div>



                }
                <div class="text-right">
                    <p><a id="btnCalcular" style="background-color: cornflowerblue; border-color: cornflowerblue; " class="btn btn-primary btn-lg">Gerar Grafico</a></p>
                </div>
            }
        </div>
    </div>
    <div id="estrutura" class="col-lg-12 col-md-12"></div>


</div>
